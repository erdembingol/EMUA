<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/urunResim"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
		/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        >
    <TextView
        android:id="@+id/urunAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toRightOf="@+id/urunResim"
        android:layout_gravity="right"
        android:textSize="25sp"
        android:textColor="#33CC33"
        android:maxLines="2"
        android:layout_weight="20"
        />
    <TextView
        android:id="@+id/urunDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:layout_below="@+id/urunAdi"
        android:layout_toRightOf="@+id/urunResim"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textColor="#33CC33"
        android:layout_weight="20"
        />
     <TextView
        android:id="@+id/urunFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/urunDetay"
        android:layout_toRightOf="@+id/urunResim"
         android:layout_gravity="right"
         android:textSize="15sp"
         android:textColor="#33CC33"
         android:layout_weight="20"
         />

    <TextView
        android:id="@+id/urunServisSuresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/urunFiyat"
        android:layout_toRightOf="@+id/urunResim"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textColor="#33CC33"
        android:layout_weight="20"
        />

     <ImageView
            android:id="@+id/sirketIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urunServisSuresi"
            android:layout_toRightOf="@+id/urunResim"
         android:layout_gravity="right"
         android:layout_weight="20"
         />
  </LinearLayout>
</RelativeLayout>
