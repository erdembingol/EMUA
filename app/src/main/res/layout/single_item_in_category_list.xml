<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90sp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="80sp"
        android:background="#8ca932">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="79sp"
            android:background="#ffffff"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginBottom="1px">

            <ImageView
                android:id="@+id/grid_item_image"
                android:layout_width="100sp"
                android:layout_height="78sp"
                android:scaleType="fitXY">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="#8ca932">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79sp"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:background="#ffffff"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px">

            <TextView
                android:id="@+id/category_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginTop="5px"
                android:textSize="23sp"
                android:textColor="#8ca932">
            </TextView>

            <TextView
                android:id="@+id/category_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bu kategori altında 12 adet ürün vardır"
                android:layout_marginTop="5px"
                android:textSize="14sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>