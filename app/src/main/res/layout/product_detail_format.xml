<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FC0FC0"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:orientation="vertical"
        android:paddingRight="2dp"
        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/urunResim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/rounded_corner" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:paddingLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".18"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#00555555"
            android:gravity="center">

            <TextView
                android:id="@+id/urunAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/urunResim"
                android:textSize="25sp"
                android:textStyle="bold" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/urunDetayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".21"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/urunDetay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/urunAdi"
                android:layout_toRightOf="@+id/urunResim"
                android:textSize="20sp"
                android:textStyle="bold"
                android:clickable="true" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".21"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="5dp"
            android:gravity="center">


            <TextView
                android:id="@+id/urunFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/urunDetay"
                android:layout_toRightOf="@+id/urunResim"
                android:textSize="20sp"
                android:textStyle="bold" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".21"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="5dp"
            android:gravity="center">


            <TextView
                android:id="@+id/urunServisSuresi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/urunFiyat"
                android:layout_toRightOf="@+id/urunResim"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="#00555555"
            android:layout_marginRight="5dp">


            <ImageView
                android:id="@+id/sirketIcon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/urunServisSuresi"
                android:layout_toRightOf="@+id/urunResim"
                android:scaleType="fitXY"
                android:background="#00555555"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>


